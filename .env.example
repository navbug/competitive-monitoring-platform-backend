# Server
PORT=5000
NODE_ENV=development

# MongoDB
MONGODB_URI=mongodb://localhost:27017/competitor-monitor
# For production use: mongodb+srv://username:password@cluster.mongodb.net/competitor-monitor

# Redis
REDIS_URL=redis://localhost:6379
# For production use: redis://username:password@host:port

# JWT
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRE=7d

# Google Gemini API
GEMINI_API_KEY=your_gemini_api_key_here

# Email (optional - for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# Rate Limiting
GEMINI_RPM=15
GEMINI_RPD=1500

# Scraping
SCRAPE_INTERVAL_HOURS=6
RSS_INTERVAL_MINUTES=60